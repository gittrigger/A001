<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:scrollbarStyle="outsideInset" android:paddingTop="1px" android:paddingBottom="1px" android:paddingLeft="3px" android:paddingRight="3px">
    
    <!-- android:shadowDx="2" android:shadowDy="2" android:shadowRadius="2.0" android:shadowColor="#000010" url text unique not null, urltext text, farkpicurl text, farkpictext text, commenturl text, commenttext text, description text -->

    <TextView  
        android:id="@+id/listrow_title"
	
        android:layout_width="fill_parent"
        android:layout_alignParentRight="true" android:paddingBottom="-10px"
        android:layout_marginTop="-3px" 
        android:layout_alignParentTop="true"
        android:text="Title Line" android:textStyle="bold"        android:layout_height="wrap_content" android:textSize="21px" android:singleLine="true" android:textScaleX="0.4" />

	<TextView
	    	android:id="@+id/listrow_date"
	        android:layout_width="wrap_content"
	        android:layout_below="@id/listrow_title"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_weight="1" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="2.0" android:shadowColor="#000010"
	        android:visibility="gone" android:textStyle="bold"
	        android:text=""  android:layout_marginLeft="9px"
	        android:layout_marginTop="-45px" android:textColor="#ffffff"
	        android:gravity="left" android:textSize="26px" android:textScaleX="0.6"/>
	        
		<TextView
	    	android:id="@+id/listrow_author"
	    	android:layout_below="@id/listrow_title"
	    	android:layout_toRightOf="@id/listrow_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5px"
	        android:singleLine="true"
	        android:visibility="gone"
	        android:layout_weight="1" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="2.0" android:shadowColor="#000010"
	        android:text=""
	        android:layout_marginTop="-45px" android:textColor="#ffffff"
	        android:gravity="left" android:textSize="26px" android:textScaleX="0.6"/>
	
        
    <TextView  
        android:id="@+id/listrow_summary"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        
        android:layout_below="@id/listrow_author"
        android:visibility="gone"
        android:text="Blog body content."
        android:fadingEdge="horizontal" android:layout_height="wrap_content" android:textSize="14px" android:singleLine="true" android:ellipsize="end"/>


</RelativeLayout>
